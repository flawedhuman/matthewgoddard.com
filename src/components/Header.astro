<header>
    <div class="header-grid">
        <a href="/"><img class="logomark" src="/images/mdg-logomark.svg" alt="MatthewGoddard.com"></a>
        <a class="resume-link" href="/pdfs/matthew-goddard-resume.pdf" target="_blank">Resume</a>
    </div>
</header>

<style>

    header {
        top: 0;
        position: initial;
        background-color: transparent;
    }

    @media screen and (min-width: 600px) {

        header {
            padding-inline: 1rem;
            top: 1rem;
            position: sticky;
        }

    }

    .header-grid {
        margin-inline: auto;
        grid-template-columns: 1fr;
        display: grid;
        text-align: center;
        position: relative;
        background: linear-gradient(147deg, rgba(0, 0, 0, 1) 0%, rgba(50, 50, 50, 0.72) 50%, rgba(0, 0, 0, 1) 100%);
        backdrop-filter: blur(5px);
    }

    .header-grid::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(#999, #000) border-box;
        z-index: -1;
        border-radius: inherit;
        border: 1px solid transparent;
        mask: linear-gradient(black) border-box, linear-gradient(black) padding-box;
        mask-composite: subtract;
    }

    @media screen and (min-width: 600px) {
        
        .header-grid {
            padding: 0.5rem 1.5rem;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr;
            text-align: left;
            max-width: 1200px;
            border-radius: 100vw;
        }

    }

    .header-grid a {
        color: #FFF;
        font-family: var(--font-uppercase);
        font-size: 2rem;
        text-decoration: none;
    }

    .header-grid a:first-child {
        color: var(--primary-blue);
        justify-self: center;
    }

    @media screen and (min-width: 600px) { 
        
        .header-grid a:first-child {
            justify-self: start;
        }

    }
        
    .header-grid a:first-child:hover, 
    .header-grid a:first-child:focus-visible {
        text-decoration: underline;
    }

    .header-grid .resume-link::after {
        content: url(/images/down-arrow.svg);
    }

    @media screen and (min-width: 600px) {
        
        .header-grid a:not(:first-child) {
            justify-self: end;
            align-content: center;
        }

    }

    .header-grid .logomark {
        margin-block: 1rem;
        width: 3rem;
        max-width: 100%;
    }

    @media screen and (min-width: 600px) {
        
        .header-grid .logomark {
            margin-block: 0;
        }

    }

</style>