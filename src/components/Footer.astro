<footer>
    <div class="footer-grid">
        <a href="/">matthewgoddard.com</a>
        <p>&copy; 2025 matthew goddard</p>
    </div>
</footer>

<style>

    footer {
        padding: 1rem;
        background-color: #000;
    }

    .footer-grid {
        margin-inline: auto;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr 1fr;
        display: grid;
        text-align: center;
    }

    @media screen and (min-width: 600px) {
        
        .footer-grid {
            margin-inline: auto;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr;
            text-align: left;
            max-width: 1200px;
        }

    }

    .footer-grid a {
        color: #FFF;
        font-family: var(--font-uppercase);
        font-size: 2rem;
        text-decoration: none;
    }

    .footer-grid a:first-child {
        color: var(--primary-blue);
        justify-self: center;
    }

    @media screen and (min-width: 615px) { 
        
        .footer-grid a:first-child {
            justify-self: start;
        }

    }
        
    .footer-grid a:first-child:hover, 
    .footer-grid a:first-child:focus-visible {
        text-decoration: underline;
    }

    .footer-grid p {
        justify-self: center;
        color: #FFF;
    }

    @media screen and (min-width: 600px) {
        
        .footer-grid p {
            justify-self: end;
            color: #FFF;
        }

    }

</style>